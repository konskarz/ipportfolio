<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content">
	<name>Content - Page Navigation Modified</name>
	<version>1.0</version>
	<creationDate>August 2013</creationDate>
	<description>Modified page navigation plugin</description>
	<author>Konstantin Karzanov</author>
	<authorEmail>konskar@free.fr</authorEmail>
	<authorUrl>http://konskar.free.fr</authorUrl>
	<files>
		<filename plugin="pagenavigationmod">pagenavigationmod.php</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="position"
					type="list"
					default="0"
					label="Position">
					<option value="1">Below</option>
					<option value="0">Above</option>
				</field>
				<field name="relative"
					type="list"
					default="1"
					label="Relative to">
					<option value="1">Full article</option>
					<option value="0">Text</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
