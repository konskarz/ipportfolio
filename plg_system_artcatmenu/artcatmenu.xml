<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>System - ArtCatMenu</name>
	<version>1.0</version>
	<creationDate>October 2014</creationDate>
	<description>Create menu items for articles in the chosen category automatically</description>
	<author>Konstantin Karzanov</author>
	<authorEmail>konskar@free.fr</authorEmail>
	<authorUrl>http://konskar.free.fr</authorUrl>
	<files>
		<filename plugin="artcatmenu">artcatmenu.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="catid"
					type="category" 
					extension="com_content"
					multiple="true"
					label="JCATEGORY"/>
			</fieldset>
		</fields>
	</config>
</extension>